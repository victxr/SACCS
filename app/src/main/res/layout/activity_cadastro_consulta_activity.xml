<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.CadastroFaqActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0C4DE"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Utilize o menu acima para inserir, atualizar ou deletar um item."
                android:textStyle="italic"/>

        <Spinner
                android:id="@+id/edtFuncao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Funcao"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Selecione seus horário disponível"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

        <Spinner
                android:id="@+id/edtDiaDaSemana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <CheckBox android:id="@+id/ab_manha"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="08:00 às 10:00"/>
        <CheckBox android:id="@+id/cd_manha"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="10:00 às 12:00"/>
        <CheckBox android:id="@+id/ab_tarde"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="13:30 às 15:30"/>
        <CheckBox android:id="@+id/cd_tarde"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="15:30 às 17:30"/>


    </LinearLayout>

    <ListView
            android:id="@+id/listViewConsulta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>